<Page x:Class="_62413___Project.LoginScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_62413___Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginScreen">

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="4,0,-4,0">
        <StackPanel Margin="200,100,200,100">
            <TextBlock Text="Login Screen" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" FontSize="20"
                       Background="{DynamicResource TextBoxBackgroundBrush}"
                       Foreground="{DynamicResource TextBoxForegroundBrush}"/>
            <TextBox Grid.Row="3" Name="LoginBox" Margin="20" Grid.Column="0" Height="30" 
                     Background="{DynamicResource TextBoxBackgroundBrush}"
                     Foreground="{DynamicResource TextBoxForegroundBrush}"/>
            <Button Grid.Row="3" Content="Enter" Margin="20" MaxWidth="70" Grid.Column="1" Click="NameChange" 
                    Background="{DynamicResource ButtonBackgroundBrush}"
                    Foreground="{DynamicResource ButtonForegroundBrush}"
                    BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Page>
