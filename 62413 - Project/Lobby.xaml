<Page x:Class="_62413___Project.Lobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_62413___Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginScreen">

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="4,0,-4,0">
        <Label Content="Input your name" HorizontalAlignment="Left" Margin="242,28,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="231,59,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" TextChanged="Name_TextChanged" Name ="Name" Foreground="#FF989898" GotFocus="Name_GotFocus" LostFocus="Name_LostFocus"/>
        <Button Content="Join a server" HorizontalAlignment="Left" Margin="231,165,0,0" VerticalAlignment="Top" Click="JoinServer" Width="120"/>
        <Button Content="Create a server" HorizontalAlignment="Left" Margin="424,165,0,0" VerticalAlignment="Top" Click="CreateServer" Width="111"/>
        <TextBox HorizontalAlignment="Left" Margin="231,139,0,0" TextWrapping="Wrap" Text="Server address" VerticalAlignment="Top" Width="120" TextChanged="Server_TextChanged" Name="Server" Foreground="#FF989898" LostFocus="Server_LostFocus" GotFocus="Server_GotFocus"/>
        <Label Content="Or" HorizontalAlignment="Left" Margin="376,162,0,0" VerticalAlignment="Top"/>
        <Label Content="Input password" HorizontalAlignment="Left" Margin="430,28,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="419,59,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="121" TextChanged="Password_TextChanged" Name="Password" Foreground="#FF989898" GotFocus="Password_GotFocus" LostFocus="Password_LostFocus"/>

    </Grid>
</Page>
