<Window x:Class="_62413___Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_62413___Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBoxMessage" Grid.Row="0" Margin="5" />
        <Button Grid.Row="0" Margin="695,5,0,5" HorizontalAlignment="Left" Width="100" Content="Send" Click="ButtonSend_Click"/>
        <ListBox x:Name="listBoxChat" Grid.Row="1" Margin="5"/>
        <Button Grid.Row="2" Margin="5" HorizontalAlignment="Right" Width="100" Content="Disconnect" Click="ButtonDisconnect_Click"/>
    </Grid>
</Window>
